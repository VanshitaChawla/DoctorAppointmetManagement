@model DoctorAppointmentManagement.Contracts.Appointment

@{
    
}

<section>
    <div class="form-body">
        <div class="row">
            <div class="form-holder">
                <div class="form-content">
                    <div class="form-items" style="background-color:darkslateblue">
                        <h3>Register Today</h3>
                        <p>Fill in the data below.</p>
                        <form class="requires-validation" method="post" asp-action="Appointment" asp-controller="User">
                            <div class="col-md-12">
                                 Name
                                <input asp-for="PatientName" class="form-control" />
                                <span asp-validation-for="PatientName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Timestamp">Select Timing Slot:</label>
                                <select asp-for="Timestamp" class="form-control" name="Timestamp" asp-items="@ViewBag.TimingSlotsList">
                                    <option value="">-- Select Timing Slot --</option>
                                   
                                </select>





                                <span asp-validation-for="Timestamp" class="text-danger"></span>
                            </div>

                            <!-- Add hidden inputs for Date, StartTime, and EndTime -->
                            <input type="hidden" asp-for="DoctorId" />
                            @* <input type="hidden" asp-for="StartTime" />
                            <input type="hidden" asp-for="EndTime" /> *@
                            <div class="form-button mt-3">
                                <button id="submit" type="submit" class="btn btn-primary">Register</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
