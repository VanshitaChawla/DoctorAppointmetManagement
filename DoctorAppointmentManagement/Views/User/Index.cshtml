@model IEnumerable< DoctorAppointmentManagement.Contracts.Doctor>

@{
    
    ViewData["Title"] = "Manage Doctors";
}

<section>
  
    <h2 id="header-Services">For Your Service</h2>

    <div id="doctors-container">
     
        @foreach (var doctor in Model)
        {
            <div class="card-User">
                @if (!string.IsNullOrEmpty(doctor?.ProfilePicture))
                {
                    <img src="@doctor.ProfilePicture" alt="Profile Picture" width="250px" />
                }
                <div class="container">
                    <h4><b>@doctor.Name</b></h4>
                    <p>Description: @doctor.Description</p>
                    <p>Fees: @doctor.Fees</p>

                    <button class="btn-close-white" onclick="appointDoctor(@doctor.Id)">Appoint</button>

                    <script>
                        function appointDoctor(doctorId) {
                            // Construct the URL with the doctorId and navigate to the Appointment action
                            var url = `/User/Appointment?DoctorId=${doctorId}`;
                            window.location.href = url;
                        }
                    </script>
                </div>
            </div>
        }
    </div>
</section>