                                <div class="btn-group" role="group">
                                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("EditUser", "Admin", new { id = user.Id })'">
                                        <i class="bi bi-pencil-square"></i>Edit
                                    </button>
                                    <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("DeleteUser", "Admin", new { id = user.Id })'">
                                        <i class="bi bi-trash"></i>Delete
                                    </button>
                                </div>
                            </td> *@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
