@model IEnumerable<ApplicationUser>

@using DoctorAppointmentManagement.Data
@{
    Layout = "AdminLayout";
    ViewData["Title"] = "Home";
}

<section class="card">
    <div class="card-header">
        <h2>Manage Users</h2>
    </div>

    @using (Html.BeginForm())
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover" style="color: black">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.UserName)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var user in Model.Where(u => !User.IsInRole("Doctors")))
                    {
                        <tr>
                            <td>@Html.DisplayFor(model => user.UserName)</td>
                            <td>@Html.DisplayFor(model => user.Email)</td>
                            <td>@Html.DisplayFor(model => user.Name)</td>
