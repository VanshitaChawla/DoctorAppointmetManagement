@model DoctorAppointmentManagement.Contracts.Doctor
@{
    Layout = "AdminLayout";
    ViewData["Title"] = "Edit";
}

<section>

    <form method="post" asp-action="EditDoctor">
        <input asp-for="Id" hidden />
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Edit Doctor</h2>
                <hr />
            </div>
            <div asp-validation-summary="All"></div>
            <div class="mb-3">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" value="@Model.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description">Description
                    <span asp-validation-for="Description" class="text-danger"></span>
                </label>
                <input asp-for="Description" class="form-control" value="@Model.Description" />
            </div>
            <div class="mb-3">
                <label asp-for="Email">Email
                    <span asp-validation-for="Email" class="text-danger"></span>
                </label>
                <input asp-for="Email" class="form-control" value="@Model.Email" />
            </div>
            <div class="mb-3">
                <label asp-for="Password">Password
                    <span asp-validation-for="Password" class="text-danger"></span>
                </label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Fees">Fees
                    <span asp-validation-for="Fees" class="text-danger"></span>
                </label>
                <input asp-for="Fees" class="form-control" value="@Model.Fees" />
            </div>
            <button type="submit" class="btn btn-outline-primary" style="width:150px">Edit</button>
            <a asp-controller="Admin" asp-action="IndexDoctor" class="btn btn-secondary" style="width:150px">Back to List</a>
        </div>
    </form>

</section>