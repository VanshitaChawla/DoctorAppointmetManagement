@model IEnumerable<Doctor>
@{
    Layout = "AdminLayout";
    ViewData["Title"] = "Home";
}

<section class="card">
    <div class="card-header">
        <h2>Manage Doctors</h2>
       
    </div>
    <div class="col-6 text-end" id="CreateClass">
        <a asp-controller="Admin" asp-action="CreateDoctor" class="btn btn-success">
            <i class="bi bi-plus-circle-fill"></i>Create New Category
        </a>
    </div>

    @using (Html.BeginForm())
    {
        <div>
            <table width="1000px" style="align-content:center; justify-content:space-between;">
                <thead >
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Password)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.Fees)</th>
                @* <th>@Html.DisplayNameFor(model => model.ProfilePictureFile)</th> *@
                <th></th>
                </thead>
                <tbody>
                    @foreach (var doctor in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(model => doctor.Name)</td>
                            <td>@Html.DisplayFor(model => doctor.Email)</td>
                            <td>@Html.DisplayFor(model => doctor.Password)</td>
                            <td>@Html.DisplayFor(model => doctor.Description)</td>
                            <td>@Html.DisplayFor(model => doctor.Fees)</td>
                            @* <td>@Html.DisplayFor(model => doctor.ProfilePictureFile)</td> *@
                           @*  <td>
                                <ul>
                                    @foreach(var timing in AvailableTiming)
                                    {
                                        <li>@Html.DisplayFor(model => timing.StartTime) - @Html.DisplayFor(model => timing.EndTime)</li>
                                    }
                                </ul>
                            </td> *@
                            <td><div class="w-75 btn-group" role="group">
                                <a asp-controller="Admin" asp-action="EditDoctor" asp-route-id="@doctor.Id">
                                    <i class="bi bi-pencil-square">Edit</i>
                                </a>
                                <a asp-controller="Admin" asp-action="DeleteDoctor" asp-route-id="@doctor.Id">
                                    <i class="bi bi-pencil-square">Delete</i>
                                </a>
                                <td>
                            </div>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</section>
