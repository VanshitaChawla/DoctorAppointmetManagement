@model IEnumerable<DoctorAppointmentManagement.Contracts.Doctor>
@{
    Layout = "AdminLayout";
    ViewData["Title"] = "Home";
}

<section class="card">
    <div class="card-header">
        <h2>Manage Doctors</h2>
    </div>
    <div class="col-6 col-md-4 " id="CreateClass">
        <a asp-controller="Admin" asp-action="CreateDoctor" class="btn btn-success">
            <i class="bi bi-plus-circle-fill"></i>Create New Category
        </a>
    </div>

    @using (Html.BeginForm())
    {
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>@Html.DisplayNameFor(model => model.Password)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th>@Html.DisplayNameFor(model => model.Fees)</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var doctor in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(model => doctor.Name)</td>
                            <td>@Html.DisplayFor(model => doctor.Email)</td>
                            <td>@Html.DisplayFor(model => doctor.Password)</td>
                            <td>@Html.DisplayFor(model => doctor.Description)</td>
                            <td>@Html.DisplayFor(model => doctor.Fees)</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("EditDoctor", "Admin", new { id = doctor.Id })'">
                                        <i class="bi bi-pencil-square"></i>Edit
                                    </button>
                                    <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("DeleteDoctor", "Admin", new { id = doctor.Id })'">
                                        <i class="bi bi-trash"></i>Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }}
                </tbody>
            </table>
        </div>
    }
</section>
